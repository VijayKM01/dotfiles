#!/bin/sh

mpccol="^c#d3869b^$(mpc)"
filter() { echo $mpccol | sed "/^volume:/d;s/\\&/&amp;/g;s/\\[paused\\].*/‚è∏/g;/\\[playing\\].*/d" | paste -sd ' ';}

pidof -x mpdup >/dev/null 2>&1 || mpdup >/dev/null 2>&1 &

case $BLOCK_BUTTON in
	1) mpc status | filter ; setsid -f "$TERMINAL" -e ncmpcpp ;;  # right click, pause/unpause
	2) mpc toggle | filter ;;  # right click, pause/unpause
	3) mpc status | filter ; notify-send "üéµ Music module" "\- Shows mpd song playing.
- ‚è∏ when paused.
- Left click opens ncmpcpp.
- Middle click pauses.
- Scroll changes track.";;  # right click, pause/unpause
	4) mpc prev   | echo "$(filter $1)^d^" ;;  # scroll up, previous
	5) mpc next   | echo "$(filter $1)^d^" ;;  # scroll down, next
	6) mpc status | echo "$(filter $1)^d^" ; "$TERMINAL" -e "$EDITOR" "$0" ;;
	*) mpc status | echo "$(filter $1)^d^" ;;
esac
