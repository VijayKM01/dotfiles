#!/bin/sh

filter() { mpc | sed "/^volume:/d;s/\\&/&amp;/g;s/\\[paused\\].*/‚è∏/g;/\\[playing\\].*/d" | paste -sd ' ';}

pidof -x mpdup >/dev/null 2>&1 || mpdup >/dev/null 2>&1 &

case $BLOCK_BUTTON in
	1) echo "^c#d3869b^$(mpc status | filter )^d^" ; setsid -f "$TERMINAL" -e ncmpcpp ;;  # right click, pause/unpause
	2) echo "^c#d3869b^$(mpc toggle | filter )^d^" ;;  # right click, pause/unpause
	3) echo "^c#d3869b^$(mpc status | filter )^d^" ; notify-send "üéµ Music module" "\- Shows mpd song playing.
- ‚è∏ when paused.
- Left click opens ncmpcpp.
- Middle click pauses.
- Scroll changes track.";;  # right click, pause/unpause
	4) echo "^c#d3869b^$(mpc prev   | filter )^d^" ;;  # scroll up, previous
	5) echo "^c#d3869b^$(mpc next   | filter )^d^" ;;  # scroll down, next
	6) echo "^c#d3869b^$(mpc status | filter )^d^" ; "$TERMINAL" -e "$EDITOR" "$0" ;;
	*) echo "^c#d3869b^$(mpc status | filter )^d^" ;;
esac
