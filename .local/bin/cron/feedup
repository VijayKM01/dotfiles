#!/bin/sh

# Set as a cron job to check for new RSS entries for newsboat and subs.
# If newsboat is open, sends it an "R" key to refresh.

ping -q -c 1 1.1.1.1 > /dev/null || exit

/usr/bin/notify-send -u low "ðŸ“° Updating RSS feeds..."

ps ax | grep -q newsboat$ && /usr/bin/xdotool key --window "$(/usr/bin/xdotool search --name newsboat)" R && exit

echo ðŸ”ƒ > /tmp/newsupdate
pkill -RTMIN+6 "${STATUSBAR:-dwmblocks}"
/usr/bin/newsboat -x reload
/usr/local/bin/subs -u
rm -f /tmp/newsupdate
pkill -RTMIN+6 "${STATUSBAR:-dwmblocks}"
/usr/bin/notify-send -u low "ðŸ“° RSS feed update complete."
