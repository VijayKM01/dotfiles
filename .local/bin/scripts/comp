#!/bin/bash
#
# Start a composition manager.
# (xcompmgr in this case)

comp=picom
# comp=xcompmgr

comphelp() {
    echo "Composition Manager:"
    echo "   (re)start: COMP"
    echo "   stop:      COMP -s"
    echo "   query:     COMP -q"
    echo "              returns 0 if composition manager is running, else 1"
    exit
}

checkcomp() {
    pgrep $comp &>/dev/null
}

stopcomp() {
    checkcomp && killall $comp
}

startcomp() {
    stopcomp
    # Example settings only. Replace with your own.
    # xcompmgr -cCf -D3 -t-5 -l-5 -r5 -o.50 &
    picom -b --experimental-backends &
    exit
}

case "$1" in
    "")   startcomp ;;
    "-q") checkcomp ;;
    "-s") stopcomp; exit ;;
    *)    comphelp ;;
esac
