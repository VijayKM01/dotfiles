#!/bin/sh

# setbg
# This script sets a background image or gif animation, using pywal to set a terminal colorscheme,or otherwise
# using Xresources with xwallpaper, tested mostly on dwm.

# 2020 Francesco Minnocci <ascoli.minnocci@gmail.com>

#	Usage:
#		` setbg [ -i, -input "path/to/img" ] [ -m, -maximize ] [ -w, -wal ] `

bgloc=$XDG_CONFIG_HOME/wp.png
format="--zoom"

while getopts ":hi:wm" o; do
	case "${o}" in
		h)
			printf "Usage :\\nsetbg\\n\\t [ -i, -input 'path/to/img' ]\\n\\t [ -m, -maximize: maximize wallpaper (default format is --zoom) ]\\n\\t [ -w, -wal: use pywal if installed ]\\n\\t [ -h, -help: Show this message ]\\n" && exit ;;
		i)
			[ -n "$2" ] && cp "$2" $bgloc > /dev/null 2>&1 && notify-send -i "$bgloc" "Wallpaper changed."
			xrdb -load $XDG_CONFIG_HOME/X11/Xresources && vimwal -x ;;
		w)
			hash wal &>/dev/null && wal -i $bgloc && wal -c && vimwal -w ;;
		m)
			format="--maximize" ;;
		*)
			printf "Invalid option: -%s\\n" "$OPTARG" && exit ;;
	esac
done

# Use gifview for gifs, or else xwallpaper
	mime="$( file --dereference --brief --mime-type -- "$bgloc" )"
	killall -q xwinwrap 2>/dev/null
	[ "$mime" = "image/gif" ] && gifbg "$bgloc" || xwallpaper $format "$bgloc"
