#!/bin/sh

deref="$(readlink -f "$1")"
DIR="$(dirname "$deref")"
base="$(basename "$deref")"
ls "$DIR" | awk "BEGIN { lines = \"\"; m = 0; } /^$base$/ { m = 1; } { if (!m) { if (lines) { lines = lines\"\n\"; } lines = lines\"\"\$0; } else { print \$0; } } END { print lines; }" | grep -i "\.\(png\|ico\|tif\|jpg\|jpeg\|gif\|webp\)\(_large\)*$" | setsid sxiv -a $DIR/ 2>/dev/null
