# vi: ft=zsh
## Bind keys
	alias -- -='cd -'		# Cd into last dir
	bindkey -M menuselect 'h' vi-backward-char
	bindkey -M menuselect 'k' vi-up-line-or-history
	bindkey -M menuselect 'l' vi-forward-char
	bindkey -M menuselect 'j' vi-down-line-or-history
	# do not save these in history
	bindkey -s '^o' ' lfcd\n'
	bindkey -s '^g' ' ytop\n'
	bindkey -s '^v' ' v\n'
	bindkey -s '^u' ' u\n'
	bindkey -s '^[n' 'neomutt\n'
	bindkey -s '^s' 'up2date\n'
	bindkey -s '^y' "pacman -Slq | fzf --multi --preview 'pacman -Si {1}' | xargs -ro sudo pacman -S\n"

# These need to be here because they are not compatible with bash, see aliasrc
alias -g \
	M='| more'	\
	L='| less'	\
	H='| head'	\
	T='| tail'	\
	G='| grep'	\
	C='| wc'	\
	S='| sort'	\
	N='> /dev/null' \
	X='|xclip'	\
	A='|xargs'
